{
  "name": "server",
  "version": "1.0.50",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "bun run build:binary",
    "build:binary": "bun build --compile --minify-whitespace --minify-syntax --target bun-linux-x64 --outfile server.js src/index.ts",
    "start": "./server.js",
    "clean": "rm -rf dist server.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "^1.4.13",
    "@react-email/components": "1.0.3",
    "@workspace/schemas": "workspace:*",
    "better-auth": "^1.4.10",
    "cheerio": "^1.1.2",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.8",
    "elysia-http-status-code": "^1.0.9",
    "elysia-logger": "^0.5.2",
    "elysia-rate-limit": "^4.4.2",
    "ioredis": "^5.8.2",
    "postgres": "^3.4.7",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "react-email": "^5.1.1",
    "typescript": "^5.7.2"
  }
}
