{
  "name": "server",
  "version": "1.0.50",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "bun run build:binary",
    "build:binary": "bun build --compile --minify-whitespace --minify-syntax --target bun-linux-x64 --outfile server.js src/index.ts",
    "start": "./server.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "^1.4.13",
    "@workspace/schemas": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.8",
    "elysia-logger": "^0.5.2",
    "elysia-rate-limit": "^4.4.2",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.7.2"
  }
}
