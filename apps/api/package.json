{
  "name": "server",
  "version": "1.0.50",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "bun run build:binary",
    "build:binary": "bun build --compile --minify-whitespace --minify-syntax --target bun-linux-x64 --outfile server.js src/index.ts",
    "start": "./server.js"
  },
  "dependencies": {
    "@workspace/schemas": "workspace:*",
    "@elysiajs/cors": "^1.3.3",
    "elysia": "^1.3.8"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.7.2"
  }
}