# =============================================
# API Server Configuration
# =============================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development          # Options: development, test, production
PORT=3000                     # API server port (default: 3000)
LOG_LEVEL=info                # Options: debug, info, warn, error (default: info)

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Leave empty for permissive CORS in development
CORS_ORIGIN=http://localhost:3001

# =============================================
# PostgreSQL Database Configuration (REQUIRED)
# =============================================
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_database_name
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================
# Redis Configuration (REQUIRED)
# =============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================================
# API URL & Authentication (REQUIRED)
# =============================================
API_URL=http://localhost:3000
BETTER_AUTH_SECRET=your-32-character-secret-key-here

# =============================================
# OAuth Providers (REQUIRED)
# =============================================
# Create GitHub OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================
# Email Configuration (REQUIRED)
# =============================================
# Get API key from: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com

# =============================================
# AI Services (OPTIONAL)
# =============================================
# Google Gemini API: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key

# YouTube API (optional): https://console.developers.google.com
YOUTUBE_API_KEY=your_youtube_api_key

# =============================================
# AWS S3 & CDN Configuration (REQUIRED)
# =============================================
# See docs/S3_AND_CDN_SETUP.md for setup instructions

AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET=your-bucket-name
CDN_URL=https://your-distribution.cloudfront.net