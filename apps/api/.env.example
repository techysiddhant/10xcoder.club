# =============================================
# API Server Configuration
# =============================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development          # Options: development, test, production
PORT=3000                     # API server port (default: 3000)
LOG_LEVEL=info                # Options: debug, info, warn, error (default: info)

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Leave empty for permissive CORS in development
CORS_ORIGIN=http://localhost:3001

# =============================================
# PostgreSQL Database Configuration (REQUIRED)
# =============================================
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_database_name
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================
# Redis Configuration (REQUIRED)
# =============================================
# Used for caching scraped URLs
REDIS_URL=redis://localhost:6379

# =============================================
# Authentication Configuration (REQUIRED)
# =============================================
API_URL=http://localhost:3000
BETTER_AUTH_SECRET=your_random_secret_min_32_chars
DOMAIN=localhost

# GitHub OAuth (for GitHub login)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================
# External API Keys (OPTIONAL)
# =============================================

# YouTube Data API v3 - for scraping YouTube videos/playlists
# Get from: https://console.cloud.google.com/apis/credentials
# Without this, YouTube scraping uses oEmbed fallback (limited data)
YOUTUBE_API_KEY=

# Gemini API Key - for semantic search embeddings
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Email (Resend) - for sending transactional emails
RESEND_API_KEY=

# =============================================
# AWS S3 Configuration (OPTIONAL)
# =============================================
# For file uploads (images, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=ap-south-1